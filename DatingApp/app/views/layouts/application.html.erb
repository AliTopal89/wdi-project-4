<!DOCTYPE html>
<html>
<head>
  <title>DatingApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js" %>
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

  <!-- Optional theme -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div id="container"> 
    <ul>  
			<% if current_user %>
      <li class="active"><font color="red">Logged in as </font><%= current_user.username %><span class="sr-only">(current)</span></li>
        <nav class="navbar navbar-inverse">
          <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            </button>
            <a class="navbar-brand" href="#">I-Like</a>
            </div>
              <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                  <ul class="nav navbar-nav">
        
				      
                <li class="active"><%= link_to "Home Page", root_path %><span class="sr-only">(current)</span></li>
                <li class="active"><%= link_to 'Edit Profile',edit_user_registration_path %><span class="sr-only">(current)</span></li>
        				<li class="active"><%= link_to 'Your Conversations', conversations_path %><span class="sr-only">(current)</span></li>
        				<li class="active"><%= link_to "Log out", destroy_user_session_path %><span class="sr-only">(current)</span></li>
                <li class="active"><%= link_to 'Likes', likes_path %><span class="sr-only">(current)</span></li> 
                <li class="active"><%= link_to 'Users', users_path %><span class="sr-only">(current)</span></li>
                </ul> 
              </div>
          </div>   
        </nav>
			<% else %>
        <nav class="navbar navbar-inverse">
          <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            </button>
            <a class="navbar-brand" href="#">I-Like</a>
          </div>
             <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">
				        <li class="active"><%= link_to "Sign up", new_user_registration_path %><span class="sr-only">(current)</span></li>
				        <li class="active"><%= link_to "Log in", new_user_session_path  %><span class="sr-only">(current)</span></li>
            <li class="active"><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %><span class="sr-only">(current)</span></li>
          </ul>
            </div>  
        </div>
      </nav> 
      <% end %>
    </ul>
    </div>
      
    <div class="container">
    	<% flash.each do |key, value| %>
    		<div class="alert alert-<%= key %>">
    			<%= value %>
    		</div>
  		<% end %>
 
  		<div class="page-header">
    		<h1><%= yield :page_header %></h1>
  		</div>
 
  		<%= yield %>

        <div class="face">
  <div class="hour-hand"></div>
  <div class="minute-hand"></div>
  <div class="seconds-hand"></div>
  <div class="center"></div>
  <div class="clock"></div>
</div>

	</div>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

</body>
</html>
